/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

page {
  background: rgb(255, 255, 255);
}
.page-section-spacing {
  width: 100%;
}
.container {
  padding: 0;
  display: flex;
  justify-content: flex;
}

.button_container {
  margin-top: 600rpx;
}
.flex-wrp{
  margin-top: 60rpx;
  margin: auto;
  width: 90%;
  overflow: hidden;
}

.form-item {
  margin-bottom: 10px;
  margin-top: 10px;
  width: 90%;
  /* overflow: hidden; */
}
.flex-item{
  float: left;
  width: 300rpx;
  height: 400rpx;
  font-size: 26rpx;
  margin: 10rpx 10rpx 0rpx 20rpx;
  overflow: hidden;
}
.flex-item-V{
  margin: 0 auto;
  width: 300rpx;
  height: 200rpx;
}

.input {
  width: 75%;
  float: left;
  height: 36px;
  border: 1px solid #ddd;
  box-sizing: border-box;
  padding-left: 12rpx;
}

.button {
  float: right;
  height: 36px;    
  line-height: 36px;
  background: rgb(116, 37, 182);
  color: white;
  text-align: center;
}

.text_box {
  width: 100%;
  text-align: left;
}
.text_box .text_line {
  /* width: 102px;
  height: 39rpx; */
  display: inline-block;
  box-sizing: border-box;
  position: relative;
  left: 25rpx;
}
.view_line {
  /* margin: 0rpx 2% 0rpx 2%; */
  width: 90%;
  box-sizing: border-box;
  margin: 20px 0;
}

.view_line view {
  background: rgb(235, 235, 235);
  padding: 0 6px;
  margin: 2px;
  float: left;
  color: rgb(136, 132, 132);
  cursor: pointer;
}

.output_line {
  width: 96%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  margin: 0rpx 2% 0rpx 2%;
}

.output_line view {
  width: 75%;
  height: 2rpx;
  background: linear-gradient(to right,#706f70, #706f70);
}

.text_line {
  font-size: 30rpx;
  font-weight: 600;
  color: rgb(104, 100, 100);
  margin: 0rpx 2% 0rpx 2%;
}
.image {
  width: 100%;
}
.image image {
  width: 100%;
  background-size: auto 100%;
  background-repeat: no-repeat;
}

.picker{
  padding: 13px;
  background-color: #FFFFFF;
}


.table {
  border: 0px solid darkgray;
 }
 .tr {
  display: flex;
  width: 90%;
  justify-content: center;
  height: 2rem;
  align-items: center;
 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
  font-size: 12px;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .bg-e{
  background: #c7ccce;
 }
 .th {
  width: 40%;
  justify-content: center;
  background: #8d44af;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 13px;
  justify-content: flex;
 }